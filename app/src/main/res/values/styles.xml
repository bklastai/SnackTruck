<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/lightGreyBackground</item>
    </style>

    <style name="PrimaryText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="SecondaryText" parent="@style/PrimaryText">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

</resources>
